<div data-role="page" id="backlog">
  <div data-role="header" data-position="fixed">
    <h4>Postear</h4>
  </div>
  <div class="ui-content" role="main">
    <form id="post_form">
      <label for="">Nombre:</label>{{user}}
      <input type="hidden" value="" name="nombre_id" id="nombre_id"/>
      <label for="">¿Que estas pensando?</label>
      <textarea id="postear" name="postear" rows="8" cols="80"></textarea>
      <br />
      <br />
      <input type="submit" value="Publicar" name="btnEnviar" />
      <a href="#listUsers" class="ui-btn">Cancelar</a>
    </form>
  </div>
  <div class="postarea">
    <ul>
      {{#each posts}}
        <li>{{user}} : {{post}}</li>
      {{/each}}
    </ul>
  </div>
  <div data-role="footer" data-position="fixed">
    <h5>Derechos Reservados SW 2017</h5>
  </div>
</div>





<div data-role="page" id="login">
    <div data-role="header" data-position="fixed">
        <h1>MicroBlog</h1>
    </div>
    <div role="main" class="ui-content">
        <h4>Login</h4>
        <form id="frm_login">
            <div class="ui-field-contain">
                <label for="lgn_user">Email</label>
                <input type="email" name="lgn_user" id="lgn_user" placeholder="abc@gmail.com"/>
                <br/>
                <label for="lgn_pwd">Contraseña</label>
                <input type="password" name="lgn_pwd" id="lgn_pwd" placeholder="Contraseña"/>
                <br/>
                <button id="btnLgnIn">iniciar Sesion</button>
            </div>
        </form>
    </div>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
              <li><a href="#register">registrate</a></li>
            </ul>
        </div>
    </div>
</div>
<div data-role="page" id="register">
    <div data-role="header" data-position="fixed">
        <h1>registrate</h1>
    </div>
    <div role="main" class="ui-content">
        <h4>registrate</h4>
        <form id="frm_register">
            <div class="ui-field-contain">
                <label for="reg_user">Email</label>
                <input type="email" name="reg_user" id="reg_user" placeholder="abc@gmail.com"/>
                <br/>
                <label for="reg_name">Nombre Completo</label>
                <input type="text" name="reg_name" id="reg_name" placeholder="Nombre Completo"/>
                <br/>
                <label for="reg_pwd">Contraseña</label>
                <input type="password" name="reg_pwd" id="reg_pwd" placeholder="Contraseña"/>
                <br/>
                <label for="reg_pwd_cnf">Confirmar contraseña</label>
                <input type="password" name="reg_pwd_cnf" id="reg_pwd_cnf" placeholder="Confirmar Contraseña"/>
                <br/>
                <button id="btnRegLgn">Registrate</button>
            </div>
        </form>
    </div>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="#login">Logeate</a></li>
                <li><a href="#register" class="ui-btn-active ui-state-persist">registrate</a></li>
            </ul>
        </div>
    </div>
</div>
