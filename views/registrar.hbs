<div data-role="page" id="register">
    <div data-role="header" data-position="fixed">
        <h1>Sign Up</h1>
    </div>
    <div role="main" class="ui-content">
        <h4>Sign Up</h4>
        <form id="frm_register">
            <div class="ui-field-contain">
                <label for="reg_user">Email</label>
                <input type="email" name="reg_user" id="reg_user" placeholder="your@email.com"/>
                <br/>
                <label for="reg_name">Full Name</label>
                <input type="text" name="reg_name" id="reg_name" placeholder="Complete Name"/>
                <br/>
                <label for="reg_pwd">Password</label>
                <input type="password" name="reg_pwd" id="reg_pwd" placeholder="Password"/>
                <br/>
                <label for="reg_pwd_cnf">Confirm Password</label>
                <input type="password" name="reg_pwd_cnf" id="reg_pwd_cnf" placeholder="Confirm Password"/>
                <br/>
                <button id="btnRegLgn">Sign Up</button>
            </div>
        </form>
    </div>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="#login">Log In</a></li>
                <li><a href="#register" class="ui-btn-active ui-state-persist">Sign Up</a></li>
            </ul>
        </div>
    </div>
</div>
